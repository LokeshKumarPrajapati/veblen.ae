
.area.home-section
  padding 0  
 


.brand-slider
  display flex
  flex-wrap nowrap
  overflow-x auto
  width 100%
  padding 50px 0
  scroll-snap-type x mandatory\
  
  
  &::-webkit-scrollbar
    display none


  scrollbar-width none


.brand-tile
  flex 0 0 auto
  width auto
  height 80px  
  margin-right 30px
  scroll-snap-align center
  display flex
  align-items center
  justify-content center

  img
    height 40px  
    width auto   
    object-fit contain
    object-position center


@media only screen and (max-width: 1200px)
  .brand-slider
    padding 15px 0

@media only screen and (max-width: 768px)
  .brand-tile
    margin-right 20px
    height 30px

    img
      height 30px

@media only screen and (max-width: 576px)
  .brand-slider
    padding 10px 0
  
  .brand-tile
    margin-right 15px
    height 25px

    img
      height 25px
